# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Local MongoDB:
# DATABASE=mongodb://localhost:27017/customer_service

# MongoDB Atlas:
DATABASE=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/database_name?retryWrites=true&w=majority

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your_jwt_secret_key_min_32_characters

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# EMAIL SERVICE CONFIGURATION
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ============================================
# CLOUDINARY CONFIGURATION
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ============================================
# PAYMENT GATEWAYS (Optional)
# ============================================
STRIPE_SECRET_KEY=sk_test_xxxxx
ESEWA_MERCHANT_ID=xxxxx
ESEWA_SECRET_KEY=xxxxx
